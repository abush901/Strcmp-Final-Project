#include <cstring>

#include <iostream>

using namespace std;

// Create a main method

int main()

{
    // Create the two character arrays of length 25
    char name1[25];
    char name2[25];
    // Declare the variables
    char character;
    int result;
    cout << "Please input the first name" << endl;
    // Create a "for loop" to accept the first name from the user.
    for (int index = 0; index < 25; index++)
    {
        character = getchar();
        if (character == '\n' || character == 13)
        {
            break;
        }
        else
        {
            name1[index] = character;
            name1[index + 1] = '\0';
        }
    }
    cout << "Please input the second name" << endl;
    // Create a "for loop" to accept the second name from the user.  
    for (int index = 0; index < 25; index++)
    {
        character = getchar();
        if (character == '\n' || character == 13)
        {
            break;
        }
        else
        {
            name2[index] = character;
            name2[index + 1] = '\0';
        }
    }
    // Compare two names using "strcmp()" method
    result = strcmp(name1, name2);

    // Create a "switch statement" to check the
    //result of the two names
    switch (result)
    {
        // Create a "case(1)" block.
        // This block is executed
        //if the first name is the greater than the second name
    case (1):
        cout << "The names are as follows:" << endl;
        cout << name2 << endl;
        cout << name1 << endl;
        break;
        // Create a "case(0)" block.
        // This block is executed
        //if the first name second name are equal
    case (0):
        cout << "The names are as follows:" << endl;
        cout << name1 << endl;
        cout << name2 << endl;
        cout << "The names are same" << endl;
        break;
        // Create a "case(-1)" block.
        // This block is executed
        //if the first name is the less than the second name
    case (-1):
        cout << "The names are as follows:" << endl;
        cout << name1 << endl;
        cout << name2 << endl;
    }
    return 0;
}
